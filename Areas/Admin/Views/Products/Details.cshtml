@model _23DH114365_MyStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div class="container-fluid">
    <dl class="dl-horizontal">
        <dt>Tên sản phẩm</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>Mô tả</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductDecription)
        </dd>
        <dt>Đơn giá</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt>Hình ảnh</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>
        <dt>Danh mục</dt>
        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt style="padding:10px"></dt>
        <dd style="padding:10px">
            @Html.ActionLink("Cập nhật", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
        </dd>
    </dl>
</div>