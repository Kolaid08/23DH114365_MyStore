@model _23DH114365_MyStore.Models.ViewModel.HomeProductVM
@using PagedList.Mvc
<link rel="stylesheet" href="~/Content/main.css">

@* hiển thị danh sách sản phẩm *@
@if (Model.NewProducts != null && Model.NewProducts.Any())
{
    <section class="container-fluid new-arrivals">
        <h2>Sản phẩm mới</h2>
        <ul class="list-container">
            @foreach (var product in Model.NewProducts)
            {
                <li class="product">
                    <div>
                        <a href="@Url.Action("ProductDetail","Home",new { id = product.ProductID })">
                            <img scr="@Html.DisplayFor(modelItem => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <p class="productPrice">@Html.DisplayFor(modelItem => product.ProductPrice)</p>
                        <p class="productName">@Html.DisplayFor(modelItem => product.ProductName)</p>
                        <p class="productSell">đã bán:&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)</p>

                    </div>
                </li>
            }
        </ul>
    </section>
    @* hiển thị phân trang *@
    <div class="pagination-container">
        @Html.PagedListPager(Model.NewProducts, page => Url.Action("Index", new { page, searchTerm = Model.SearchTerm}))
    </div>
}
else 
{ 
    <p> ko tìm đc sản phẩm phù hợp</p>
}







